      <a href="<%= locals.fileLink %>"><%= locals.fileLink %></a>
    </div>

    <form action="/upload" method="post" style="display: grid; gap: .5rem; grid-template-columns: auto 1fr; max-width: 500px; margin: 0 auto; margin-top: 5rem;" enctype="multipart/form-data">
        <!-- ... (your existing code) ... -->
