        <input type="email" id="senderEmail" name="senderEmail" required />
        <label for="receiverEmail">Receiver's Email:</label>
        <input type="email" id="receiverEmail" name="receiverEmail" required />
        <!-- ... (your existing code) ... -->
        <button style="grid-column: span 2;" type="submit">Share</button>
      </form>
      
  <% } %>
